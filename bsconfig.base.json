{
    "diagnosticLevel": "error",
    "retainStagingFolder": true,
    "rootDir": "src",
    "plugins": ["@rokucommunity/bslint"],
    "files": [
        "source/**/*",
        "components/**/*",
        "images/**/*",
        "fonts/**/*",
        "manifest"
    ],
    "stagingDir": "dist/build",
    "createPackage": false,
    "sourceMap": true,
    "lintConfig": "bslint.jsonc",
    "autoImportComponentScript": true
}
